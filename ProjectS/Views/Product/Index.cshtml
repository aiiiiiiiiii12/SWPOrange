@model List<Product>
@{
    var subCate = ViewData["subCate"] as SubCategory;
}
<div class="body__overlay"></div>
<div class="ht__bradcaump__area" style="background: rgba(0, 0, 0, 0) url(/images/bg/4.jpg) no-repeat scroll center center / cover ;">
   
</div>


<section class="htc__product__area shop__page ptb--130 bg__white">
    <div class="container">
        <div class="htc__product__container">
            <!-- Start Product MEnu -->
            <div class="row">
                <div class="col-md-12">
                    <div class="filter__menu__container">
                        <div class="product__menu">
                        
                        
                            @foreach (var l in ViewData["listSubCate"] as List<SubCategory>)
                            {
                                if(l.SubCategoryId == subCate.SubCategoryId)
                                {
                                    <a style="color: red; font-size: 17px; margin-right:25px">@l.Name</a>
                                }else{
                                    <a asp-controller="Product" asp-action="Index" asp-route-gender="@ViewData["gender"]" asp-route-id="@l.SubCategoryId" style="font-size: 17px; margin-right:25px" >@l.Name</a>
                                   
                                }
                            }

                        </div>
                        <div class="dropdown">
                            <button style="color: red" class="btn dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Tìm kiếm theo giá
                            </button>
                            <ul class="dropdown-menu">
                                <li><a class="dropdown-item" href="#">Giá: Giá thấp đến cao</a></li>
                                <li><a class="dropdown-item" href="#">Giá: giá cao đến thấp</a></li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>


            <div class="row product__list">



                @foreach (var l in Model)
                {
                    <div class="col-md-4 single__pro col-lg-3 col-sm-12 cat--4">
                        <div class="product foo">
                            <div class="product__inner">
                                <div class="pro__thumb">
                                    <a href="#">
                                        <img src="/images/product/@l.ImageMain" alt="product images">
                                    </a>
                                </div>
                                <div class="product__hover__info">
                                    <ul class="product__action">
                                        <li><a data-bs-toggle="modal" data-bs-target="#productModal" title="Quick View" class="quick-view modal-view detail-link" href="#"><span class="ti-plus"></span></a></li>
                                        <li><a title="Add TO Cart" href="cart.html"><span class="ti-shopping-cart"></span></a></li>
                                    </ul>
                                </div>
                                <div class="add__to__wishlist">
                                    <a data-bs-toggle="tooltip" title="Add To Wishlist" class="add-to-cart" href="wishlist.html"><span class="ti-heart"></span></a>
                                </div>
                            </div>
                            <div class="product__details">
                                <h2><a href="product-details.html">Brone Lamp Glasses</a></h2>
                                <ul class="product__price">
                                    <li class="old__price">$16.00</li>
                                    <li class="new__price">$10.00</li>
                                </ul>
                            </div>
                        </div>
                    </div>
                }


            </div>
            <div class="row mt--60">
                <div class="col-md-12">
                    <div class="htc__loadmore__btn">
                        <a href="#">load more</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>